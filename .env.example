# Home Assistant connection
# Copy this file to .env and update with your actual values

# Your Home Assistant URL
HA_URL=http://homeassistant.local:8123

# Long-lived access token from Home Assistant
# Create at: Profile â†’ Long-Lived Access Tokens
HA_TOKEN=your_long_lived_access_token_here

# InfluxDB connection (for historical data and system identification)
# Only needed if you want to use system identification features
HA_DB_URL=http://your-influxdb-server:8086/api/v2/query
HA_DB_USER_NAME=your_influxdb_username
HA_DB_PASSWORD=your_influxdb_password
